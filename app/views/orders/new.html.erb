 <div class="card-order mx-auto mb-3 col-10 ">
    <span> <i class="fa-solid fa-cart-shopping"></i>    1 order will be created</span>
  </div>
 <div class="card-order mx-auto col-10">

   <%= render 'orders/image_product' %>

    <%= simple_form_for [@product, @order] do |f| %>
      <%= f.input :delivery, collection:  Order.deliveries.keys, prompt: "Choose delivery",  as: :radio_buttons, label: 'How do you want to receive the product?', error: 'Please select one option' %>
      <%= f.input :payment, collection: Order.payments.keys, prompt: "Choose Payment Method", as: :radio_buttons, label: 'What will be the payment method?', error: 'Please select one option'%>

<!-- Button trigger modal -->
      <button type="button" class="btn btn-dark col-12" data-bs-toggle="modal" data-bs-target="#exampleModal">
       Create Order
      </button>
<!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"><span> <i class="fa-solid fa-cart-shopping"></i>    1 order will be created</span></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="card-product-o">
          <%= render 'orders/image_product' %>
        <div class="card-product-infos-o">
          <h2> <%= @product.name %>  </h2>
          <p><strong> $ <%= @product.price %> </p></strong>
        </div>
      </div>
    </div>
        <div class="modal-footer">
          <%= f.submit "Create order", class: "btn btn-secondary" %>
          <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Back</button>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
