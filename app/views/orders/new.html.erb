 <hr>
 <div class="card-order col-10 ">
    <span> <i class="fa-solid fa-cart-shopping"></i>    1 order will be created</span>
  </div>

 <div class="card-order col-10">
<img width="500" src="https://images.unsplash.com/photo-1490481651871-ab68de25d43d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" />

  <%= simple_form_for [@product, @order] do |f| %>
    <%= f.input :delivery, collection: ["Home delivery", "Shipping to a delivery point"], prompt: "Choose delivery",  as: :radio_buttons, label: 'How do you want to receive the product?', error: 'Please select one option' %>
    <%= f.input :payment, collection: %w[cash debit credit], prompt: "Choose", as: :radio_buttons, label: 'What will be the payment method?', error: 'Please select one option'%>
    <%= f.input :status, input_html: {value: false} %>

<!-- Button trigger modal -->
      <button type="button" class="btn btn-dark col-12" data-bs-toggle="modal" data-bs-target="#exampleModal">
       Create Order
      </button>

      <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><span> <i class="fa-solid fa-cart-shopping"></i>    1 order will be created</span></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

         <div class="card-product-o">
      <img src="https://images.unsplash.com/photo-1490481651871-ab68de25d43d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" />
      <div class="card-product-infos-o">
        <h2> <%= @product.name %>  </h2>
        <p><strong>     $ <%= @product.price %> </p></strong>
      </div>
    </div>

  </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Back</button>
         <%= f.submit %>
      </div>
    </div>
  </div>
</div>





    <% end %>

