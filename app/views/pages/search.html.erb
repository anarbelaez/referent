<div class="row g-0">
  <%= render "search_form" %>
</div>

<div class="row">
  <div class="col-12 my-3">
    <p class="text-center text-secondary">
      <% if @query %>
        <%= @products.count %> results for "<%= @query %>"
      <% else %>
        All products
      <% end %>
    </p>
  </div>
</div>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-3">
      <%= render "shared/card_product", product: product %>
    </div>
  <% end %>
</div>
