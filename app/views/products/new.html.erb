<h1 class="my-5">New Product</h1>
  <%= simple_form_for(@product) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :size %>
    <%= f.input :color %>
    <%= f.input :category %>
    <%= f.input :genre %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit %>
  <% end %>
