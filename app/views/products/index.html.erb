<div class="border-bottom">
  <%= link_to "Products", products_path, class: "text-decoration-none fs-4 text-dark d-inline" %>
  <i class="bi bi-chevron-right"></i>
</div>

<div class="row mt-2 gy-2">
  <% @products.each do |product| %>
    <div class="col-6 col-md-3">
        <div class="card border-0 rounded-0"
        style="height: 270px;
        background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url(<%= products.sample %>)"></div>
        <%= link_to product.name, product_path(product), class: "link-dark text-decoration-none" %>
        <div class="d-flex justify-content-between align-items-center">
          <p class="m-0">$<%= product.price %></p>

        <% unless current_user.referent? %>
        <%= link_to "I want it!", new_product_order_path(product), class: "btn btn-info p-0 px-1" %>
        <% end %>
        </div>
        <p> <%= product.brand %> </p>
    </div>
  <% end %>
</div>
