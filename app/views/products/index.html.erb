<h1>Products</h1>
<% @products.each do |product| %>
  <h2><%= link_to product.name, product_path(product) %></h2>
  <p> <%= product.user_id %> </p>
  <p> <%= product.description %> </p>
  <p> <%= product.price %> </p>
  <p> <%= product.size %> </p>
  <p> <%= product.color %> </p>
  <p> <%= product.category %> </p>
  <p> <%= product.genre %> </p>
<% end %>
