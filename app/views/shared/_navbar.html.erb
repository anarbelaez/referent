<nav class="navbar bg-light sticky-top pb-2">
  <div class="container">
    <%= link_to "Referent", home_path, class: "navbar-brand fw-bold fs-4" %>


    <div class="d-flex justify-content-end align-items-center">
      <% if fashion_lover? %>
        <%= link_to "Conviertete en Referent", new_referent_path, class: "text-decoration-none text-secondary p-1 px-3 rounded-pill border"%>
      <% end %>

      <%= link_to "BUSCAR", search_path, class: "text-decoration-none text-dark mx-3 text-uppercase" %>

      <button class="navbar-toggler border-0 p-0 shadow-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
        <span class=""><i class="bi bi-person-circle text-dark fs-3"></i></span>
      </button>
    </div>


    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
      <div class="offcanvas-header py-3 px-3">
      <% if user_signed_in? %>
        <h5 class="offcanvas-title" id="offcanvasNavbarLabel"><%= current_user.name %></h5>
      <% else %>
        <h5 class="offcanvas-title fs-6" id="offcanvasNavbarLabel">Bienvenido a Referent</h5>
      <% end %>
        <button type="button" class="btn-close shadow-none" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body py-1 px-3">
        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
          <% if user_signed_in? %>

            <%= link_to user_path(current_user), class: "nav-link active text-decoration-none" do %>
              <i class="bi bi-person-fill"></i>
              <span class="mx-2">Ver mi perfil</span>
            <% end %>


            <% if current_user.referent? %>
              <%= link_to new_product_path, class: "nav-link text-decoration-none" do %>
                <i class="bi bi-bag-heart"></i>
                <span class="mx-2">Agregar producto</span>
              <% end %>
            <% end %>

            <%= link_to edit_user_registration_path(current_user), class: "nav-link text-decoration-none" do %>
              <i class="bi bi-gear-fill"></i>
              <span class="mx-2">Ajustes de mi perfil</span>
            <% end %>

            <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link text-decoration-none" do %>
              <i class="bi bi-person-x-fill"></i>
              <span class="mx-2">Salir de mi cuenta</span>
            <% end %>
          <% else %>
            <%= link_to new_user_session_path, class: "nav-link active text-decoration-none" do %>
              <i class="bi bi-person-fill"></i>
              <span class="mx-2">Entrar a mi cuenta</span>
            <% end %>
            <%= link_to new_user_registration_path, class: "nav-link text-decoration-none" do %>
              <i class="bi bi-person-heart"></i>
              <span class="mx-2">Registrarme</span>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</nav>
