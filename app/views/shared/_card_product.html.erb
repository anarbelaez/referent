  <div class="bg-color-beige shadow-sm">
    <%= image_tag products.sample, class: "card-img-top", height: 270 %>
    <div class="">
    <%= link_to product.name, product_path(product), class: "link-dark text-decoration-none ms-1 mt-1 font-pb" %>
      <div class="d-flex justify-content-between align-items-center py-2 px-1">
        <p class="m-0 ms-1 font-pb">$<%= product.price %></p>
        <% unless product.available? %>
          <p class="m-0 ms-1 font-pb bg-warning px-2">Ordered</p>
        <% end %>
        <% unless referent_user? %>
          <%= link_to "I want it!", new_product_order_path(product), class: "bottom-orange font-pb" %>
        <% end %>
      </div>
      <% if referent_product?(product) && !product.orders.empty? %>
        <%= link_to "View order details", order_path(product.orders.first.id) %>
      <% end %>
    </div>
  </div>
