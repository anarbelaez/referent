<div class="row  mx-auto my-2 card-form col-sm-12 col-10">
  <div class="col-sm-12 col-lg-6 d-flex justify-content-center">
  <div class="col-6" id="for1">
  <h3>Welcome</h3>
  <p><small>Please enter your details</small></p>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true,
                input_html: {class:"border-0 border-bottom border-1 bg-light border-dark"} %>
    <%= f.input :last_name, required: true,
                input_html: {class:"border-0 border-bottom border-1 bg-light border-dark"} %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                input_html: {class:"border-0 border-bottom border-1 bg-light border-dark"}%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" },
                input_html: {class:"border-0 border-bottom border-1 bg-light border-dark"} %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" },
                input_html: {class:"border-0 border-bottom border-1 bg-light border-dark"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn btn-dark col-12 mb-3"  %>
    <%= render "devise/shared/links" %>
  </div>

<% end %>


 </div>
