
<div class="row  mx-auto my-2 card-form col-sm-12 col-10">
  <div class="col-sm-12 col-lg-6  mt-5 d-flex justify-content-center">
  <div class="col-10" id="for1">
<h3>Change your password</h3>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password,
                label: "New password",
                required: true,
                autofocus: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" },
                input_html: { autocomplete: "email" }, input_html: {class:"border-0 border-bottom border-1 bg-light border-dark"} %>
    <%= f.input :password_confirmation,
                label: "Confirm your new password",
                required: true,
                input_html: { autocomplete: "new-password" },
                input_html: { autocomplete: "email" }, input_html: {class:"border-0 border-bottom border-1 bg-light border-dark"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
