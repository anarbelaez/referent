  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, input_html: {class:"border-0 border-bottom border-1 bg-light border-dark"}%>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" }, input_html: {class:"border-0 border-bottom border-1 bg-transparent border-dark"} %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-dark col-12 mb-3" %>
    </div>
  <% end %>

